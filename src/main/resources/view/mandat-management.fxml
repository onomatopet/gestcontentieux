<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" styleClass="main-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.regulation.contentieux.controller.MandatController">

    <!-- En-tête -->
    <top>
        <VBox spacing="10" styleClass="header-section">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="titleLabel" styleClass="h2" text="Gestion des Mandats">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <!-- Affichage du mandat actif -->
                <VBox alignment="CENTER_RIGHT" spacing="5">
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Mandat actif :" styleClass="label-bold" />
                        <Label fx:id="mandatActifLabel" text="Aucun" styleClass="label-highlight" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Période :" />
                        <Label fx:id="periodeActifLabel" text="-" />
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Label text="Statut :" />
                        <Label fx:id="statutActifLabel" text="Inactif" styleClass="label label-danger" />
                    </HBox>
                </VBox>
            </HBox>

            <Separator />
        </VBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <SplitPane dividerPositions="0.35" orientation="VERTICAL">

            <!-- Section supérieure : Création et filtres -->
            <VBox spacing="15">
                <padding>
                    <Insets all="15" />
                </padding>

                <!-- Section création de mandat -->
                <TitledPane text="Créer un nouveau mandat" expanded="true">
                    <VBox fx:id="creationSection" spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="120" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>

                            <Label text="Description :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <TextField fx:id="descriptionField" promptText="Description du mandat (optionnel)" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <Label text="Date début :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <DatePicker fx:id="dateDebutPicker" maxWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Date fin :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <DatePicker fx:id="dateFinPicker" maxWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        </GridPane>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button fx:id="createButton" text="Créer le mandat" styleClass="button-primary">
                                <graphic>
                                    <Label text="➕" />
                                </graphic>
                            </Button>

                            <Label fx:id="numeroGenereLabel" styleClass="label-info" />
                        </HBox>
                    </VBox>
                </TitledPane>

                <!-- Filtres -->
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Label text="Filtres :" styleClass="label-bold" />

                    <ComboBox fx:id="statutFilterCombo" promptText="Tous les statuts" prefWidth="150" />

                    <CheckBox fx:id="seulementActifsCheck" text="Mandats actifs uniquement" />

                    <Region HBox.hgrow="ALWAYS" />

                    <Button fx:id="refreshButton" text="Actualiser" styleClass="button-secondary">
                        <graphic>
                            <Label text="🔄" />
                        </graphic>
                    </Button>
                </HBox>
            </VBox>

            <!-- Section inférieure : Tableau et statistiques -->
            <SplitPane dividerPositions="0.7" orientation="HORIZONTAL">

                <!-- Tableau des mandats -->
                <VBox spacing="10">
                    <padding>
                        <Insets all="15" />
                    </padding>

                    <Label text="Liste des mandats" styleClass="h3" />

                    <TableView fx:id="mandatsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="numeroColumn" text="Numéro" prefWidth="100" />
                            <TableColumn fx:id="periodeColumn" text="Période" prefWidth="200" />
                            <TableColumn fx:id="statutColumn" text="Statut" prefWidth="100" />
                            <TableColumn fx:id="affairesColumn" text="Affaires" prefWidth="80" style="-fx-alignment: CENTER" />
                            <TableColumn fx:id="montantColumn" text="Montant total" prefWidth="120" style="-fx-alignment: CENTER-RIGHT" />
                            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200" />
                        </columns>
                        <placeholder>
                            <Label text="Aucun mandat trouvé" />
                        </placeholder>
                    </TableView>
                </VBox>

                <!-- Statistiques du mandat sélectionné -->
                <VBox fx:id="statisticsSection" spacing="15" visible="false">
                    <padding>
                        <Insets all="15" />
                    </padding>

                    <Label text="Statistiques du mandat" styleClass="h3" />

                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints hgrow="NEVER" minWidth="150" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>

                        <Label text="Nombre d'affaires :" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="statsNombreAffaires" text="0" styleClass="label-stat" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Affaires soldées :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="statsAffairesSoldees" text="0" styleClass="label-stat label-success" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Affaires en cours :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="statsAffairesEnCours" text="0" styleClass="label-stat label-warning" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Separator GridPane.columnSpan="2" GridPane.rowIndex="3" />

                        <Label text="Montant total :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                        <Label fx:id="statsMontantTotal" text="0 FCFA" styleClass="label-stat label-primary" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label text="Agents impliqués :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                        <Label fx:id="statsNombreAgents" text="0" styleClass="label-stat" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </GridPane>

                    <Region VBox.vgrow="ALWAYS" />

                    <VBox spacing="10">
                        <Button text="Générer le rapport du mandat" styleClass="button-primary" maxWidth="Infinity">
                            <graphic>
                                <Label text="📊" />
                            </graphic>
                        </Button>

                        <Button text="Exporter les données" styleClass="button-secondary" maxWidth="Infinity">
                            <graphic>
                                <Label text="📥" />
                            </graphic>
                        </Button>
                    </VBox>
                </VBox>
            </SplitPane>
        </SplitPane>
    </center>

    <!-- Pied de page -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="footer-section">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Aide" styleClass="button-help">
                <graphic>
                    <Label text="❓" />
                </graphic>
            </Button>

            <Button text="Fermer" onAction="#close" styleClass="button-secondary" />
        </HBox>
    </bottom>

    <stylesheets>
        <URL value="@../css/main-styles.css" />
        <URL value="@../css/mandat-styles.css" />
    </stylesheets>
</BorderPane>